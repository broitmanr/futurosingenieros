{
  "schemas": {
    "UserLogin": {
      "type": "object",
      "properties": {
        "mail": {
          "mail": "string",
          "example": "user@frlp.utn.edu.ar"
        },
        "password": {
          "type": "string",
          "example": "Password123"
        }
      }
    },
    "Success": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Operación exitosa"
        },
        "code": {
          "type": "integer",
          "example": 200
        }
      }
    },
    "Error": {
      "type":"object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Error ocurrido"
        },
        "code": {
          "type": "integer",
          "example": 500
        }
      }
    },
    "CourseList": {
      "type": "array",
      "items": {
        "$ref": "./schemas.json#/schemas/Curso"
      }
    },
    "Curso": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "example": 1
        },
        "title": {
          "type": "string",
          "example": "Diseño de sistemas"
        }
      }
    },
    "InstanciaEvaluativaInput": {
      "type": "object",
      "properties": {
        "porcentajePonderacion": {
          "type": "number",
          "example": 20.5
        },
        "cursoID": {
          "type": "integer",
          "example": 1
        },
        "nombre": {
          "type": "string",
          "example": "Examen Final"
        },
        "tipoInstanciaID": {
          "type": "string",
          "example": "Examen"
        },
        "descripcion": {
          "type": "string",
          "example": "Examen final del curso"
        }
      },
      "required": ["porcentajePonderacion", "cursoID", "nombre", "tipoInstancia"]
    },
    "InstanciaEvaluativa": {
      "type": "object",
      "properties": {
        "porcentajePonderacion": {
          "type": "number",
          "example": 20.5
        },
        "cursoID": {
          "type": "integer",
          "example": 1
        },
        "nombre": {
          "type": "string",
          "example": "Examen Final"
        },
        "tipoInstancia": {
          "type": "integer",
          "example": 2
        },
        "descripcion": {
          "type": "string",
          "example": "Examen final del curso"
        }
      }
    },
    "TipoInstancia": {
      "type": "object",
      "properties": {
        "ID": {
          "type": "integer",
          "example": 1
        },
        "nombre": {
          "type": "string",
          "example": "Examen"
        },
        "descripcion": {
          "type": "string",
          "example": "Examen final"
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "example": "Error al listar los tipos de instancias evaluativas"
        }
      }
    }
  }
}
